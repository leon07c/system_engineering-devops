#!/usr/bin/env bash
# stop_infinity.sh - Programmatically stop the 4-to_infinity_and_beyond process

# Find the PID(s) of the target process using pgrep
PIDS=$(pgrep -f "4-to_infinity_and_beyond")

# Check if process exists and kill it
if [ -n "$PIDS" ]; then
  # Kill the process(es) - quoted to prevent globbing/word splitting
  kill "$PIDS"
  exit 0
else
  exit 1
fi
