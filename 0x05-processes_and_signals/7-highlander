#!/usr/bin/env bash
# 7-highlander - Infinite loop that handles SIGTERM gracefully

# Set up signal handler for SIGTERM
trap 'echo "I am invincible!!!"' TERM

# Infinite loop with 2-second delay
while true; do
  echo "To infinity and beyond"
  # Run sleep in background and wait for it - this allows signals to interrupt
  sleep 2 & wait $!
done
